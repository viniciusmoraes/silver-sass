// variables.json
{

	"fontFamily": ["OpenSans", "Arial", "DinBold", "Din"],

	"menuBorderRadius": {
		"selector": "menu",
		"hash": "class", //Hash: id, class or tag
		"radius": "12px"
	},

	"contentBorderRadius": {
		"selector": "content",
		"hash": "class", //Hash: id, class or tag
		"radius": "12px"
	},

	"asideBorderRadius": {
		"selector": "aside",
		"hash": "tag", //Hash: id, class or tag
		"radius": "12px"
	},

	"messageFlash": {
		"selector": "blinker",
		"hash": "class", //Hash: id, class or tag
		"name": "blinker",
		"duration": "1.2s",
		"timing": "linear",
		"iteration": "infinite"
	},


	"contentShadow": {
		"selector": "wrapper",
		"hash": "class",
		"inset": "no", //no, inset
		"hLength": "0",
		"vLength": "0",
		"blurRadius": "4px",
		"spread": "4px",
		"colorType": "hex",
		"colorValue": "#777"
	},

	"h1TextShadow": {
		"selector": "h1",
		"hash": "tag",
		"hLength": "0",
		"vLength": "0",
		"blurRadius": "4px",
		"colorType": "hex",
		"colorValue": "#777"
	},

	"menuFlexBox": {
		"selector": "menu",
		"hash": "class",
		"flexDisplay": "flex", //flex, inline-flex
		"flexDirection": "row", //row, flex-direction, column, column-reverse
		"flexWrap": "wrap", //wrap, nowrap, wrap-reverse
		"justifyContent": "flex-start", //flex-start, flex-end, center, space-between, space-around
		"alignItems": "center", //flex-start, flex-end, center, baseline, stretch
		"alignContent": "flex-start" //flex-start, flex-end, space-between, space-around, stretch (Only takes affect when there are multiple lines)
	},

	"contentBoxSizing": {
		"selector": "content",
		"hash": "class", //Hash: id, class or tag
		"boxSizing": "border-box" //content-box, border-box
	},

	"asideBoxSizing": {
		"selector": "content",
		"hash": "class", //Hash: id, class or tag
		"boxSizing": "border-box" //content-box, border-box
	},

	"contentTextareaResize": {
		"selector": "aside",
		"hash": "tag", //Hash: id, class or tag
		"resize": "both", //none, horizontal, vertical, both
		"minWidth": "100px",
		"minHeight": "30px"
	},

	"contentColumnWidth": {
		"selector": "content",
		"hash": "class", //Hash: id, class or tag
		//"columnWidth": "200px",
		"columnGap": "40px",
		"columnCount": "3",
		"columnRule": "false",
		"columnSpan": "true",
		"columnSpanValue": "h1",
		"columnSpanHash": "tag",
		"columnRuleWidth": "1px",
		"columnRuleStyle": "solid",
		"columnRuleColor": "#000"
	},

	"menuRgba": {
		"selector": "menu",
		"hash": "class",
		"property": "background",
		"red": "215",
		"green": "40",
		"blue": "40",
		"rgbaOpacity": "true",
		"rgbaOpacityValue": "0.5",
		//"rgbaFallbackIe": "false",
		"rgbaFallbackIeStart": "50990000",
		"rgbaFallbackIeEnd": "50990001"

	}


}